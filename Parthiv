for ($i=1; $i<=3; $i++)
{
	for ($j=1; $j<=3; $j++)
	{
		print"$i $j\n";
	}
}


#Print stars in increaing order
for ($i=1; $i<=5; $i++)
{
	for ($j=1; $j<=$i; $j++)
	{
		print"*";
	}
	print"\n";
}



#Print Stars in decreasing order.
for ($i=5; $i>=$n; $i--)
{
	for ($j=1; $j<=$i; $j++)
	{
		print"*";
	}
	print"\n";
}
