#Print 1-5 With each line repeating numbers in increasing order.
$i=1;
while($i<=5)
{
	$j=1;
	while($j<=$i)
	{
		print"$i";
		$j++;
	}
	print"\n";
	$i++;
}


#Print no 1-10 in tree format.
print"Enter no. of value to be printed : ";
my $n =<STDIN>;
for($i=1; $i<=$n; $i++)
{
	for($j=1; $j<=$i; $j++)
	{
		print"$j";
	}
	print"\n";
}


#Print 1-5 With each line repeating numbers in increasing order.
$i=1;
while($i<=5)
{
	$j=1;
	while($j<=$i)
	{
		print"$i";
		$j++;
	}
	print"\n";
	$i++;
}


#print Upside down * tree using Nested loop.
$i=5;
$j=5;
while($i>=1)
{
	$j=$i;
	while($j>=1)
	{
		print"*";
		$j--;
	}
	print"\n";
	$i--;
}
